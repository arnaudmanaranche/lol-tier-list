{
  "name": "@lpr/ui",
  "version": "0.0.0",
  "scripts": {
    "build": "tailwindcss -i ./styles/index.css -o ./dist/output.css",
    "build-storybook": "build-storybook --quiet",
    "chromatic": "chromatic --exit-zero-on-changes",
    "dev": "start-storybook --quiet --port 9009",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "lint:eslint": "eslint --fix --cache",
    "lint:prettier": "prettier --write --check --ignore-path=../../.prettierignore .",
    "test": "test-storybook",
    "watch:css": "tailwindcss -i ./styles/index.css -o ./dist/output.css --watch"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "yarn lint:prettier",
      "yarn lint:eslint"
    ]
  },
  "dependencies": {
    "@headlessui/react": "1.6.6",
    "clsx": "1.2.1"
  },
  "devDependencies": {
    "@lpr/data": "*",
    "@lpr/types": "*",
    "@storybook/addon-actions": "6.5.16",
    "@storybook/addon-essentials": "6.5.16",
    "@storybook/addon-interactions": "6.5.16",
    "@storybook/addon-links": "6.5.16",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/jest": "0.0.10",
    "@storybook/react": "6.5.16",
    "@storybook/test-runner": "0.9.4",
    "@storybook/testing-library": "0.0.13",
    "chromatic": "6.17.0",
    "eslint-config-lpr": "workspace:*",
    "jest": "27.5.1",
    "tailwind-config-lpr": "workspace:*",
    "tailwindcss": "3.2.6"
  }
}
