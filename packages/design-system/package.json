{
  "name": "@prodigy/ui",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "build": "tailwindcss -i ./styles/index.css -o ./dist/output.css",
    "build-storybook": "storybook build --quiet",
    "chromatic": "chromatic --exit-zero-on-changes",
    "dev": "storybook dev --quiet --port 9009",
    "lint": "yarn lint:prettier && yarn lint:eslint && yarn lint:tsc",
    "lint:eslint": "eslint --fix --cache",
    "lint:prettier": "prettier --write --check --ignore-path=../../.prettierignore .",
    "lint:tsc": "tsc -b",
    "test-storybook": "test-storybook",
    "watch:css": "tailwindcss -i ./styles/index.css -o ./dist/output.css --watch"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "yarn lint:prettier",
      "yarn lint:eslint"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.22.8",
    "@babel/preset-env": "^7.22.7",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@headlessui/react": "1.6.6",
    "@heroicons/react": "2.0.17",
    "@prodigy/data": "1.0.0",
    "@prodigy/types": "1.0.0",
    "@storybook/addon-actions": "7.0.26",
    "@storybook/addon-essentials": "7.0.26",
    "@storybook/addon-interactions": "7.0.26",
    "@storybook/addon-links": "7.0.26",
    "@storybook/addon-styling": "1.3.2",
    "@storybook/addons": "7.0.26",
    "@storybook/jest": "0.1.0",
    "@storybook/nextjs": "^7.0.26",
    "@storybook/react": "7.0.26",
    "@storybook/test-runner": "0.11.0",
    "@storybook/testing-library": "0.2.0",
    "@storybook/theming": "7.0.26",
    "autoprefixer": "10.4.14",
    "chromatic": "6.19.9",
    "clsx": "1.2.1",
    "eslint": "8.34.0",
    "eslint-config-prodigy": "1.0.0",
    "eslint-plugin-storybook": "^0.6.12",
    "jest": "27.5.1",
    "next": "13.1.6",
    "postcss": "8.4.25",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "require-from-string": "2.0.2",
    "storybook": "7.0.26",
    "tailwind-config-prodigy": "1.0.0",
    "tailwindcss": "3.2.7",
    "typescript": "4.9.5"
  },
  "peerDependencies": {
    "@headlessui/react": "1.6.6",
    "@heroicons/react": "2.0.17",
    "clsx": "1.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
