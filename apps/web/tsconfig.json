{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "compilerOptions": {
    "sourceMap": true,
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": false,
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "Contexts/*": ["src/contexts/*"],
      "Utils/*": ["src/utils/*"],
      "Assets/*": ["src/svgs/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "custom.d.ts", "src/pages/_error.js"],
  "exclude": ["node_modules"]
}
