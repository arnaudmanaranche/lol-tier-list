{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "./dist/**"]
    },
    "build-storybook": {
      "dependsOn": ["^build-storybook"],
      "outputs": ["storybook-static/**"]
    },
    "web#build": {
      "dependsOn": [
        "^build",
        "$DATABASE_URL",
        "$NEXT_PUBLIC_APP_ENV",
        "$NEXT_PUBLIC_CRONITOR_API_KEY",
        "$NEXT_PUBLIC_SENTRY_DSN",
        "$NEXT_PUBLIC_SUPABASE_ID",
        "$NEXT_PUBLIC_SUPABASE_TOKEN",
        "$OSANO_URL",
        "$PANDASCORE_TOKEN",
        "$REDIS_URL",
        "$REVALIDATE_SECRET"
      ],
      "outputs": [".next/**"]
    },
    "postbuild": {
      "dependsOn": ["^postbuild"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
