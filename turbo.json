{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "storybook-static/**"]
    },
    "build-storybook": {
      "dependsOn": ["^build-storybook"],
      "outputs": ["storybook-static/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"],
      "env": [
        "DATABASE_URL",
        "NEXT_PUBLIC_APP_ENV",
        "NEXT_PUBLIC_CRONITOR_API_KEY",
        "NEXT_PUBLIC_SENTRY_DSN",
        "NEXT_PUBLIC_SUPABASE_ID",
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "OSANO_URL",
        "PANDASCORE_TOKEN",
        "REDIS_URL",
        "REVALIDATE_SECRET"
      ]
    },
    "postbuild": {
      "dependsOn": ["^postbuild"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
