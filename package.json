{
  "name": "prodigy",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build && turbo run postbuild",
    "build-storybook": "turbo run build-storybook",
    "changeset": "changeset",
    "lint": "turbo run lint",
    "power-rankings": "turbo run dev --filter=power-rankings",
    "test": "FORCE_COLOR=1 turbo run test"
  },
  "resolutions": {
    "word-wrap": "npm:@aashutoshrathi/word-wrap@1.2.5"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "@types/react": "18.2.14",
    "@types/tailwindcss": "3.0.11",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "prettier-plugin-packagejson": "2.4.5",
    "prettier-plugin-tailwindcss": "0.2.7",
    "turbo": "1.7.4"
  },
  "packageManager": "yarn@3.4.1",
  "prisma": {
    "schema": "packages/data-management/prisma/schema.prisma"
  }
}
