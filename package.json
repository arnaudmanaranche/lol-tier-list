{
  "name": "prodigy",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build && turbo run postbuild",
    "build-storybook": "turbo run build-storybook",
    "changeset": "changeset",
    "lint": "turbo run lint",
    "power-rankings": "turbo run dev --filter=power-rankings",
    "test": "FORCE_COLOR=1 turbo run test"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.1",
    "@types/node": "18.13.0",
    "@types/react": "18.0.38",
    "@types/tailwindcss": "3.0.11",
    "autoprefixer": "10.4.14",
    "eslint": "8.34.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.2",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "prettier-plugin-packagejson": "2.4.3",
    "prettier-plugin-tailwindcss": "0.2.7",
    "tailwindcss": "3.2.7",
    "turbo": "1.7.4",
    "typescript": "4.9.5"
  },
  "packageManager": "yarn@3.4.1",
  "prisma": {
    "schema": "packages/data-management/prisma/schema.prisma"
  }
