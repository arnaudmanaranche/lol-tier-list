{
  "name": "lol-tier-list",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "generate:types": "turbo run generate:types",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint && turbo run lint:prettier",
    "lint:prettier": "turbo run lint:prettier",
    "lint:tsc": "tsc -b",
    "start": "turbo run start",
    "type-check": "turbo run type-check"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --cache --cache-location .turbo/cache/eslint/ --fix"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "8.18.1",
    "@typescript-eslint/parser": "8.18.1",
    "eslint": "8.57.1",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "lint-staged": "13.3.0",
    "prettier": "3.4.2",
    "prettier-plugin-packagejson": "2.5.8",
    "prettier-plugin-tailwindcss": "0.6.11",
    "turbo": "^2.5.6",
    "typescript": "5"
  },
  "packageManager": "yarn@4.5.3",
  "engines": {
    "node": "20"
  }
}
